<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/header_side_banner"
        android:layout_width="match_parent"
        android:layout_height="425px"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/app_banner" />

    <View
        android:id="@+id/header_side_seperator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/darksilver"
        app:layout_constraintEnd_toEndOf="@+id/header_side_banner"
        app:layout_constraintStart_toStartOf="@+id/header_side_banner"
        app:layout_constraintTop_toBottomOf="@+id/header_side_banner" />
</androidx.constraintlayout.widget.ConstraintLayout>